<!DOCTYPE html>
<html lang="en">
<%- include('../headFoot/head') %>
  <title>Attendance-Tracker Delete Account</title>
  <link rel="stylesheet" href="/cssFolder/login.css">

  <body>
    <div class="overlay" id="overlay"></div>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand logo" href="/"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link textSize" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active textSize" aria-current="page">Delete Account</a>
            </li>
            <li class="nav-item">
              <a class="nav-link textSize" href="/Attendance-Tracker/userGuide">User Guide</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Flash message -->
    <%- include('../headFoot/flashMsg.ejs') %>
      <!-- Flash message -->

      <div class="top">Attendance Tracker</div>

      <!-- Delete Account Form... -->
      <form method="post" action="/Attendance-Tracker/<%=currTech._id%>/Delete-My-Account?_method=delete" id="formBox1"
        class="needs-validation" novalidate>
        <div class="card formCard">
          <div class="card-body">
            <h2 class="card-title" style="align-items: center; text-align: center;">Delete Account</h2>
            <div class="form-floating mb-3">
              <input name="username" class="form-control inp1" id="floatingu" placeholder="User Name" required>
              <label for="floatingu">User Name</label>
            </div>
            <div class="form-floating mb-3">
              <input type="text" name="tName" class="form-control inp1" id="floatingt" placeholder="Teacher's Name"
                required>
              <label for="floatingt">Teachers's Name</label>
            </div>
            <div class="form-floating mb-3">
              <input type="email" name="tEmail" class="form-control inp1" id="floatinge" placeholder="Teacher's E-mail"
                required>
              <label for="floatinge">Teachers's E-mail</label>
            </div>
            <div class="form-floating mb-3">
              <select class="form-select inp1" name="collegeName" id="floatingSelect"
                aria-label="Floating label select example" required>
                <option value="" disabled selected>Select Your College</option>
                <% colleges.forEach(colleg=> { %>
                  <option value="<%= colleg.colleges %>">
                    <%= colleg.colleges %>
                  </option>
                  <% }); %>
              </select>
              <label for="floatingSelect">Select Your College</label>
            </div>
            <div class="form-floating mb-3">
              <input type="password" name="password" class="form-control inp1" id="password"
                placeholder="Enter Your Password" required>
              <label for="floatingPassword">Enter Your Password</label>
            </div>
            <div style="display: flex; justify-content: space-evenly;">
              <button type="button" class="btn btn-danger" id="sureDel">Delete Account</button>
              <a href="/Attendance-Tracker/<%=currTech._id%>/TeacherHome"><button type="button" class="btn btn-primary logInfo"
                  id="cancleForm">Back To Classes</button></a>
            </div>
          </div>
        </div>
      </form>
      <!-- Delete Account Form... -->

      <!-- Are You Sure.... -->
      <div class="card confDel" id="cardDel" style="width: 18rem; display: none;">
        <div class="card-body">
          <i class="fa-solid fa-circle-exclamation" id="alertSt"></i>
          <h4 class="card-title" style="margin-top: 5px;">Are You Sure ?</h4>
          <p class="card-text">All data related to your account will be deleted permanently and can't be restored again.
          </p>
          <div style="display: flex; justify-content: space-evenly;">
            <button type="button" class="btn btn-danger formBox1" id="confirmMe">Confirm</button>
            <button type="button" class="btn btn-primary logInfo" id="cancleMe">Go Back</button>
          </div>
        </div>
      </div>
      <!-- Are You Sure.... -->

      <%-include('../headFoot/footer.ejs')%>

        <script>
          let submit_1 = 'formBox1';
          document.querySelector(`.${submit_1}`).addEventListener('click', (e) => {
            addingEffects(submit_1);
          });
        </script>
        <script src="/scriptFolder/delAccount.js"></script>
        <script src="/scriptFolder/inputData.js"></script>
        <script src="/scriptFolder/loadingEffect.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
          crossorigin="anonymous"></script>
  </body>
</html>