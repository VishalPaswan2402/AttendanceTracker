  <link rel="stylesheet" href="/cssFolder/login.css">
  <link rel="stylesheet" href="/cssFolder/footer.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand logo" href="/"></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link textSize" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active textSize" aria-current="page">Verify E-mail</a>
              </li>
              <li class="nav-item">
                <a class="nav-link textSize" href="/Attendence-Tracker/userGuide">User Guide</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>  

      <!-- Flash Message... -->
    <% if (success && success.length) { %>
      <div class="alert alert-success alert-dismissible fade show" id="flashId" role="alert" style="align-items: center; text-align: center; font-size: 1.3rem;">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } else if (error && error.length) { %>
      <div class="alert alert-danger alert-dismissible fade show" id="flashId" role="alert" style="align-items: center; text-align: center; font-size: 1.3rem;">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% }%>
    <!-- Flash Message... -->

    <div class="top">Attendance Tracker</div>
    
    <form method="post" action="/Attendence-Tracker/<%=findTech._id%>/<%=genOtp%>/Verify-Teacher-Password-Code" class="needs-validation" novalidate>
      <div class="card formCard">
        <div class="card-body">
          <h2 class="card-title" style="align-items: center; text-align: center;">E-mail Verification</h2>
          <p style="text-align: center;" id="enterMsg">Please enter the 4-digit verification code you received at <strong><%=findTech.teacherEmail%></strong> to change your password.</p>
          <div class="form-floating mt-3">
            <input name="code" class="form-control" id="enterCode" placeholder="Enter Verification Code" required maxlength="4">
            <label for="enterCode">Enter Verification Code</label>
          </div>
          <div id="countdown" style="text-align: center; margin-top: 10px;"></div>
        </div>
        <button type="submit" style="width: 12rem; margin: auto;" id="registerButton" class="btn btn-primary mb-3">Register</button>
      </div>
    </form>

    <div id="foot">
        <div class="icons">
            <a href="#"><div class="iconbox"><i class="fa-brands fa-linkedin-in"></i></div></a>
            <a href="#"><div class="iconbox"><i class="fa-brands fa-twitter"></i></div></a>
            <a href="#"><div class="iconbox"><i class="fa-brands fa-git"></i></div></a>
            <a href="#"><div class="iconbox"><i class="fa-brands fa-instagram"></i></div></a>
        </div>
        <i class="fa-regular fa-copyright"></i> 2024
        Attendance Tracker India, All Rights Reserved.
    </div>

<script src="/scriptFolder/emailVerify.js"></script>
  <script src="/scriptFolder/inputData.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>