<body>
    <div class="top">Attendance Tracker</div>
    <div class="prof">
        <div class="profImage"></div>
        <div class="about margin">
            <p>Name : Arundendra Sharma</p>
            <p>Roll No. : 2214256344857</p>
        </div>
        <div class="about margin">
            <p>Year : 3rd Year</p>
            <p>Semester : 4th</p>
        </div>
    </div>
    <div id="graphBox">
        <div class="graph">
            <div class="bar b1">74.9</div>
            <div class="bar b2">100</div>
            <div class="bar b3">60</div>
            <div class="bar b4">80</div>
            <div class="bar b5">90</div>
            <div class="bar b6">62</div>
            <div class="bar b7">75</div>
            <div class="bar b8">84</div>
            <div class="bar b9">70</div>
        </div>
        <div class="subject margin">
            <div class="sub margin">DSTL</div>
            <div class="sub margin">CS</div>
            <div class="sub margin">EE</div>
            <div class="sub margin">COA</div>
            <div class="sub margin">DSA</div>
            <div class="sub margin">TC</div>
            <div class="sub margin">WD</div>
            <div class="sub margin">COAL</div>
            <div class="sub margin">DSAL</div>
