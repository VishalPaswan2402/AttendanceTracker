        </div>
        <i class="fa-regular fa-copyright"></i> 2024
        Attendance Tracker India, All rights reserved.
    </div>

    <script>

        let i=0;

        function barHeight(element){
            element.style.height=`${element.innerHTML}%`;
        }

        function changeColor(element,val){
            if(val<75){
                element.style.backgroundColor='red';
            }
        }
        
        function changeColorWithDelay(element, color, delay) {
            setTimeout(() => {
                element.style.color = color;
            }, delay);
        }

        for(i=1;i<=9;i++){
            let element = document.querySelector(`.b${i}`);
            barHeight(element);
        }

        for(i=1;i<=9;i++){
            let element = document.querySelector(`.b${i}`);
            let val=element.innerHTML;
            changeColor(element,val);
        }

        console.log(`b${i+1}`);
        for(i=1;i<=9;i++){
            let element = document.querySelector(`.b${i}`);
            changeColorWithDelay(element, 'white', 2050);
        }

    </script>

</body>
