<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Attendance-Tracker Student-Login</title>
    <link rel="icon" href="/imageFolder/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="    https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Comic+Neue:wght@700&family=DM+Serif+Display&family=Lora:ital,wght@0,400..700;1,400..700&family=PT+Sans:ital,wght@0,400;0,700;1,400;1,700&family=Protest+Revolution&family=Roboto+Slab:wght@100..900&family=Song+Myung&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/cssFolder/login.css">
    <link rel="stylesheet" href="/cssFolder/footer.css">
</head>
<body>

  <div class="overlay" id="overlay"></div>

    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand logo" href="/"></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link textSize" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active textSize" aria-current="page">Delete Account</a>
              </li>
              <li class="nav-item">
                <a class="nav-link textSize" href="/Attendence-Tracker/userGuide">User Guide</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

      <% if (error && error.length) { %>
        <div class="alert alert-danger alert-dismissible fade show" id="flashId" role="alert" style="align-items: center; text-align: center; font-size: 1.3rem;">
          <%= error %><br>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <%}%>

    <div class="top">Attendance Tracker</div>
    
    <!-- Delete Account Form... -->
    <form method="post" action="/Attendence-Tracker/<%=currTech._id%>/Delete-My-Account?_method=delete" id="formBox1"  class="needs-validation" novalidate>
        <div class="card formCard" style="width: 30rem; margin:auto;">
          <div class="card-body">
            <h2 class="card-title" style="align-items: center; text-align: center;">Delete Account</h2>
            <div class="form-floating mb-3">
              <input type="text" name="username" class="form-control" id="floatingu" placeholder="User Name" required>
              <label for="floatingu">User Name</label>
            </div>
            <div class="form-floating mb-3">
              <input type="text" name="tName" class="form-control" id="floatingt" placeholder="Teacher's Name" required>
              <label for="floatingt">Teachers's Name</label>
            </div>
            <div class="form-floating mb-3">
                <input type="text" name="tEmail" class="form-control" id="floatinge" placeholder="Teacher's E-mail" required>
                <label for="floatinge">Teachers's E-mail</label>
            </div>
            <div class="form-floating mb-3">
                <select class="form-select" name="collegeName" id="floatingSelect" aria-label="Floating label select example" required>
                  <option value="" disabled selected>Select Your College</option>
                      <% colleges.forEach(colleg => { %>
                          <option value="<%= colleg.colleges %>"><%= colleg.colleges %></option>
                      <% }); %>
                </select>
                <label for="floatingSelect">Select Your College</label>
              </div>
            <div class="form-floating mb-3">
              <input type="password" name="password" class="form-control " id="password" placeholder="Enter Your Password" required>
              <label for="floatingPassword">Enter Your Password</label>
            </div>
            <div style="display: flex; justify-content: space-evenly;">
              <button type="button" class="btn btn-danger" id="sureDel">Delete Account</button>
              <a href="/Attendence-Tracker/<%=currTech._id%>/TeacherHome"><button type="button" class="btn btn-primary" id="cancleForm">Back To Classes</button></a>
            </div> 
          </div>
        </div>
      </form>
      <!-- Delete Account Form... -->

      <!-- Are You Sure.... -->
      <div class="card confDel" id="cardDel" style="width: 18rem; display: none;">
        <div class="card-body">
          <i class="fa-solid fa-circle-exclamation" id="alertSt"></i>
          <h4 class="card-title"  style="margin-top: 5px;">Are You Sure ?</h4>
          <p class="card-text">All data related to your account will be deleted permanently and can't be restored again.</p>
          <div style="display: flex; justify-content: space-evenly;">
            <button type="button" class="btn btn-danger" id="confirmMe">Confirm</button>
            <button type="button" class="btn btn-primary" id="cancleMe">Go Back</button>
          </div>
        </div>
      </div>
      <!-- Are You Sure.... -->

    <div id="foot">
        <div class="icons">
            <a href="#"><div class="iconbox"><i class="fa-brands fa-linkedin-in"></i></div></a>
            <a href="#"><div class="iconbox"><i class="fa-brands fa-twitter"></i></div></a>
            <a href="#"><div class="iconbox"><i class="fa-brands fa-git"></i></div></a>
            <a href="#"><div class="iconbox"><i class="fa-brands fa-instagram"></i></div></a>
        </div>
        <i class="fa-regular fa-copyright"></i> 2024
        Attendance Tracker India, All Rights Reserved.
    </div>

    <script src="/scriptFolder/delAccount.js"></script>
    <script src="/scriptFolder/inputData.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>