  <script>
    // Lines to be "printed" in the loader
    const lines = [
      "Initializing the system...",
      "Connecting to the database...",
      "Fetching college records...",
      "Fetching teacher's records...",
      "Fetching student's records...",
      "Preparing attendance dashboard...",
      "Analyzing attendance trends...",
      "Cross-checking recent check-ins...",
      "Preparing attendance reports...",
      "Optimizing results...",
      "Almost there...",
    ];
  
    const terminalText = document.getElementById("terminal-text");
  
    let currentLine = 0;
  
    function printLine() {
      // Clear previous lines if all are printed (for looping effect)
      if (currentLine === 0) {
        terminalText.textContent = ""; // Clear terminal content
      }
  
      // Print the next line
      const newLine = document.createElement("div");
      newLine.textContent = lines[currentLine];
      terminalText.appendChild(newLine);
  
      currentLine++;
  
      // Scroll to bottom for a realistic terminal effect
      terminalText.scrollTop = terminalText.scrollHeight;
  
      // If we've reached the end of the lines array, reset for looping
      if (currentLine >= lines.length) {
        currentLine = 0;
      }
  
      // Keep printing until the page is fully loaded
      setTimeout(printLine, 1000); // Adjust the delay as needed
    }
  
    // Show the main content after the page loads
    window.addEventListener("load", function () {
      document.getElementById("terminal-loader").style.display = "none"; // Hide loader
      document.getElementById("mainContent").style.display = "block"; // Show main content
    });
  
    // Start the terminal effect
    printLine();
  </script>
  

