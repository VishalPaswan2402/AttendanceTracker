<!DOCTYPE html>
<html lang="en">
<%- include('../headFoot/head') %>
  <title>Attendance-Tracker Forgot Password</title>
  <link rel="stylesheet" href="/cssFolder/login.css">

  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand logo" href="/"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link textSize" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active textSize" aria-current="page">Restore Password</a>
            </li>
            <li class="nav-item">
              <a class="nav-link textSize" href="/Attendance-Tracker/userGuide">User Guide</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Flash message -->
    <%- include('../headFoot/flashMsg.ejs') %>
      <!-- Flash message -->

      <div class="top">Attendance Tracker</div>

      <form id="forgetCollegePasswordForm" action="/Attendance-Tracker/Restore-College-Password" method="post"
        class="needs-validation" novalidate>
        <div class="card formCard">
          <div class="card-body">
            <h2 class="card-title" style="align-items: center; text-align: center;">Restore Password</h2>
            <div class="form-floating mb-3">
              <select class="form-select inp1" name="college" id="floatingSelect"
                aria-label="Floating label select example" required>
                <option value="" disabled selected>Select Your College</option>
                <% colleges.forEach(colleg=> { %>
                  <option value="<%= colleg.colleges %>">
                    <%= colleg.colleges %>
                  </option>
                  <% }); %>
              </select>
              <label for="floatingSelect">Select Your College</label>
            </div>
            <div class="form-floating">
              <select class="form-select inp1" name="collegeType" id="floatingSelectT"
                aria-label="Floating label select example" required>
                <option value="" disabled selected>Select Your College Type</option>
                <option>Government College</option>
                <option>Semi-Government College</option>
                <option>Private College</option>
              </select>
              <label for="floatingSelectT">Select Your College Type</label>
            </div>
          </div>
          <button type="submit" style="width: 12rem; margin: auto;"
            class="btn btn-primary mb-3 forgetCollegePasswordForm">Find Data</button>
          <div class="logins mb-3" style="display: flex;">
            <div class="tec centerItems logInfo" style="width: 160px;"><a href="/Attendance-Tracker/College-SignUp"
                class="teach">College SignUp</a></div>
            <div class="tec centerItems logInfo" style="width: 160px;"><a href="/Attendance-Tracker/College-Login"
                class="teach">College Login</a></div>
          </div>
        </div>
      </form>

      <%-include('../headFoot/footer.ejs')%>

        <script>
          let submit_1 = 'forgetCollegePasswordForm';
          document.querySelector(`.${submit_1}`).addEventListener('click', (e) => {
            // e.preventDefault()
            addingEffects(submit_1);
          });
        </script>
        <script src="/scriptFolder/inputData.js"></script>
        <script src="/scriptFolder/loadingEffect.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
          crossorigin="anonymous"></script>
  </body>
</html>