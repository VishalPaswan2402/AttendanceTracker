<!DOCTYPE html>
<html lang="en">
<%- include('../headFoot/head') %>
<title>Attendance-Tracker Change Password</title>
<link rel="stylesheet" href="/cssFolder/login.css">
<body>
  <div class="overlay" id="overlay"></div>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand logo" href="/"></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link textSize" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active textSize" aria-current="page">Change Password</a>
              </li>
              <li class="nav-item">
                <a class="nav-link textSize" href="/Attendance-Tracker/userGuide">User Guide</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

    <!-- Flash message -->
    <%- include('../headFoot/flashMsg.ejs') %>
    <!-- Flash message -->
    
    <div class="top">Attendance Tracker</div>

    <form action="/Attendance-Tracker/<%=currCollege._id%>/Change-College-Password?_method=put" method="post" id="passwordChangeForm" novalidate class="needs-validation">
      <div class="card formCard">
        <div class="card-body">
          <h2 class="card-title" style="align-items: center; text-align: center;">New Password</h2>
          <div class="form-floating mb-3">
            <input type="text" name="collegeName" value="<%=currCollege.username%>" class="form-control" id="floatingc" placeholder="Teacher's E-mail" required readonly>
            <label for="floatingc">College Name</label>
          </div>
          <div class="form-floating mb-3">
            <input type="email" name="tEmail" class="form-control" id="floatinge" placeholder="Teacher's E-mail" value="<%=currCollege.eMail%>" required readonly>
            <label for="floatinge">Teacher's E-mail</label>
          </div>
          <div class="form-floating mb-3">
            <input type="password" name="password" id="newPassword" class="form-control" placeholder="Enter New Password" required>
            <label for="newPassword">Enter New Password</label>
          </div>
          <div class="form-floating">
            <input type="password" name="passwordConf" id="newPasswordc" class="form-control" placeholder="Enter New Password" required>
            <label for="newPasswordc">Confirm New Password</label>
          </div>
        </div>
        <button type="submit" style="width: 15rem; margin: auto;" class="btn btn-primary mb-3">Change Password</button>
      </div>
    </form>

    <%-include('../headFoot/footer.ejs')%>
    
    <!-- Attendance not marked -->
    <div class="card" style="width: 20rem;" id="notMatch">
      <div class="card-body">
        <i class="fa-solid fa-triangle-exclamation" id="alertSt"></i>
        <h4 class="card-subtitle mb-2 text-body-secondary" style="margin-top: 5px;text-align: center;" >Not Match</h4>
        <p class="card-text" style="margin-top: 5px;text-align: center;">Password does not match, please enter it again.</p>
        <div style="display: flex; align-items: center; justify-content: space-evenly;">
          <button type="button" id="notMatchOk" class="btn btn-primary" style="width: 6rem;">OK</button>
        </div>
      </div>
    </div>
    <!-- Attendance not marked -->

  <script src="/scriptFolder/inputData.js"></script>
  <script src="/scriptFolder/passwordNotMatch.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>