                <a class="nav-link textSize" href="/Attendence-Tracker/userGuide">User Guide</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <div class="top">Attendance Tracker</div>
    <div id="box" style="height: 490px;">
        <div class="log centerItems teclog"><p>Teacher's Sign-Up</p></div>
        <form method="post" action="/Attendence-Tracker/Teacher-HomePage" id="teacherForm">
            <div class="allInputs centerItems">
                <input name="teacherName" class="inputs" placeholder="Teacher's Name" required>
                <input name="teacherEmail" class="inputs" placeholder="Teacher's E-mail" required>
                <input name="collegeName" class="inputs" placeholder="College Name" required>
                <input name="subject" class="inputs" placeholder="Enter Subject Name" required>
                <!-- <div class="branch">
                    <input name="branch" class="inputs input2" placeholder="Branch" required>
                    <input name="subject" class="inputs input2" placeholder="Subject" required>
                </div> -->

                <!-- <div class="branch">
                    <input name="year" class="inputs input3" placeholder="Year">
                    <input name="semester" class="inputs input3" placeholder="Semester">
                    <input name="section" class="inputs input3" placeholder="Section">
                </div> -->

                <input name="password" type="password" id="password" class="inputs" placeholder="Password" required>
                <input name="cPassword" type="password" id="cPassword" class="inputs" placeholder="Confirm Password" required>
                <button type="submit" class="check">Create Account</button>
            </div>
        </form>
        <div class="tec centerItems"><a href="/Attendence-Tracker/Teacher-Login" class="teach">Teacher's Login</a></div>
    </div>
    <div id="foot">
        <div class="icons">
            <a href="#"><div class="iconbox"><i class="fa-brands fa-linkedin-in"></i></div></a>
