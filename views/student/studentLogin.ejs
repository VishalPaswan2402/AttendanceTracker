    <div class="top">Attendance Tracker</div>
    
    <form action="/Attendance-Tracker/Students-Page" method="get" novalidate class="needs-validation">
      <div class="card formCard">
        <div class="card-body">
          <h2 class="card-title" style="align-items: center; text-align: center;">Student's Login</h2>
          <div class="form-floating mb-3 mt-3">
            <input type="text" name="sName" class="form-control" id="floatingn" placeholder="Student's Name" required>
            <label for="floatingn">Student's Name</label>
          </div>
          <div class="form-floating mb-3">
            <input type="text" name="sRollNo" class="form-control" style="text-transform: uppercase;" id="floatingr" placeholder="Student's Roll No." required>
            <label for="floatingr">Student's Roll No.</label>
          </div>
          <div class="form-floating mb-3">
            <select class="form-select" name="semester" id="floatingSelect" aria-label="Floating label select example" required>
              <option value="" disabled selected>Select Your Semester</option>
              <option>1st Semester</option>
              <option>2nd Semester</option>
              <option>3rd Semester</option>
              <option>4th Semester</option>
              <option>5th Semester</option>
              <option>6th Semester</option>
              <option>7th Semester</option>
              <option>8th Semester</option>
            </select>
            <label for="floatingSelect">Current Semester</label>
          </div>
          <div class="form-floating mb-3">
            <input type="text" name="section" class="form-control" style="text-transform: uppercase;" id="floatings" placeholder="Section" required>
            <label for="floatings">Your Section</label>
          </div>
          <div class="form-floating ">
            <select class="form-select" name="collegeName" id="floatingSelectc" aria-label="Floating label select example" required>
              <option value="" disabled selected>Select Your College</option>
              <% colleges.forEach(colleg => { %>
                <option  value="<%= colleg.colleges %>"><%= colleg.colleges %></option>
            <% }); %>
            </select>
            <label for="floatingSelectc">Select Your College</label>
          </div>
        </div>
        <button type="submit" style="width: 12rem; margin: auto;" class="btn btn-primary mb-3">Check Attendance</button>
      </div>
    </form>

