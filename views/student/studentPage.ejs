<!DOCTYPE html>
<html lang="en">
<%- include('../headFoot/head') %>
<title>Attendance-Tracker Student's-Page</title>
<link rel="stylesheet" href="/cssFolder/stPage.css">
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand logo" href="/"></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link textSize" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active textSize" aria-current="page">Student's Page</a>
              </li>
              <li class="nav-item">
                <a class="nav-link textSize" href="/Attendance-Tracker/userGuide">User Guide</a>
              </li>
              <li class="nav-item">
                <a class="nav-link textSize" href="/">Log Out</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    <div class="top">Attendance Tracker</div>

    <!-- Student data -->
    <div class="container">
      <div class="student-details">
          <div class="student-card">
              <h2><%=findStudent.studentName%></h2>
              <p><strong>Roll No: </strong><%=findStudent.studentRollNo%></p>
              <p><strong>Semester: </strong><%=findStudent.studentSemester%></p>
              <p><strong>Section: </strong><%=findStudent.studentSection%></p>
              <p><strong>College: </strong><%=findStudent.college%></p>
              <button type="button" id="showAttendTable" class="btn btn-outline-primary">Show Attendance Table</button>
          </div>
      </div>
  </div>
  <!-- Student data -->

  <!-- Table for attendance.... -->
  <%if(findStudent.allAttendence.length>0){%>
  <div class="container" style="margin-top: 2rem; margin-bottom: 1rem; display: none;" id="showTable">
    <div class="student-details">
      <div class="student-card">
  <div style="overflow-x:auto;">
    <h4>Attendance table of all subjects.</h4>
    <table>
      <tr>
        <th>Subject Name</th>
        <th>Total Class</th>
        <th>Attended</th>
        <th>Percentage</th>
        <th>Previous Class</th>
        <th>Marked As</th>
      </tr>
      <%for(attend of findStudent.allAttendence){%>
      <tr>
        <td><%=attend.subject%></td>
        <td><%=attend.totalClass%></td>
        <td><%=attend.attendenClass%></td>
        <td><%=attend.classPercent%> %</td>
        <td><%=attend. markedOn%></td>
        <td><%=attend.classPrevious%></td>
      </tr>
      <%}%>
    </table>
  </div>
</div>
</div></div>
<%}%>
  <!-- Table for attendance.... -->

<%if(findStudent.allAttendence.length>0){%>
  <div class="container" id="allGraphs" style="margin-top: 2rem;">
    <div class="student-details">
      <div class="student-card">
        <h4>Attendance graph of all subjects.</h4>
          <div id="graphBoxs">
              <%for(attend of findStudent.allAttendence){%>
                <div class="box">
                <div class="subName centerItems"><h5><%=attend.subject%></h5></div>
                <div class="progress backColor " role="progressbar" aria-label="Animated striped example Danger striped example" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">
                  <div class="progress-bar progress-bar-striped progress-bar-animated bg-danger" id="barPer"><h7 class="percentage"><%=attend.classPercent%> %</h7></div>
                </div>
                </div>
              <%}%>
            </div>
          </div>
        </div>
      </div>
<%}%>

<%-include('../headFoot/footer.ejs')%>

<script src="/scriptFolder/stPage.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>