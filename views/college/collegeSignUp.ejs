<!DOCTYPE html>
<html lang="en">
<%- include('../headFoot/head') %>
  <title>Attendance-Tracker College-SignUp</title>
  <link rel="stylesheet" href="/cssFolder/login.css">

  <body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
      <div class="container-fluid">
        <a class="navbar-brand logo" href="/"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
          aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link textSize" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active textSize" aria-current="page">College SignUp</a>
            </li>
            <li class="nav-item">
              <a class="nav-link textSize" href="/Attendance-Tracker/userGuide">User Guide</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Flash Message... -->
    <%- include('../headFoot/flashMsg.ejs') %>
      <!-- Flash Message... -->

      <div class="top">Attendance Tracker</div>

      <form id="collegeSignupForm" action="/Attendance-Tracker/College-SignPage" method="post" novalidate
        class="needs-validation">
        <div class="card formCard">
          <div class="card-body">
            <h2 class="card-title" style="align-items: center; text-align: center;">College SignUp</h2>
            <div class="form-floating mb-3">
              <select class="form-select inp1" name="collegeName" id="floatingSelectc"
                aria-label="Floating label select example" required>
                <option value="" disabled selected>Select Your College</option>
                <% colleges.forEach(colleg=> { %>
                  <option value="<%= colleg.colleges %>" <%=collegeData.collegeName===colleg.colleges ? 'selected' : ''
                    %>><%= colleg.colleges %>
                  </option>
                  <% }); %>
              </select>
              <label for="floatingSelectc">Select Your College</label>
            </div>
            <div class="form-floating ">
              <select class="form-select inp1" name="collegeType" id="floatingSelectT"
                aria-label="Floating label select example" required>
                <option value="" disabled selected>Select Your College Type</option>
                <option <%=collegeData.collegeType==="Government College" ? 'selected' : '' %>>Government College
                </option>
                <option <%=collegeData.collegeType==="Semi-Government College" ? 'selected' : '' %>>Semi-Government
                  College</option>
                <option <%=collegeData.collegeType==="Private College" ? 'selected' : '' %>>Private College</option>
              </select>
              <label for="floatingSelectT">Select Your College Type</label>
            </div>
            <div class="form-floating mb-3 mt-3">
              <input type="text" name="cLocation" value="<%= collegeData.cLocation || '' %>" class="form-control inp1"
                id="floatingL" placeholder="College Location" required>
              <label for="floatingnL">College Location</label>
            </div>
            <div class="form-floating mb-3">
              <input type="password" name="password" class="form-control inp1" id="floatingp"
                placeholder="Enter Password" required>
              <label for="floatingp">Enter Password</label>
            </div>
            <div class="form-floating">
              <input type="password" name="cPassword" class="form-control inp1" id="floatingP"
                placeholder="Re-enter Password" required>
              <label for="floatingP">Re-enter Password</label>
            </div>
          </div>
          <button type="submit" style="width: 12rem; margin: auto;"
            class="btn btn-primary mb-3 collegeSignupForm">Register</button>
          <div class="tec centerItems mb-3 logInfo"><a href="/Attendance-Tracker/College-Login" class="teach">College
              Login</a></div>
        </div>
      </form>

      <%-include('../headFoot/footer.ejs')%>

        <script>
          let submit_1 = 'collegeSignupForm';
          document.querySelector(`.${submit_1}`).addEventListener('click', (e) => {
            addingEffects(submit_1);
          });
        </script>
        <script src="/scriptFolder/inputData.js"></script>
        <script src="/scriptFolder/loadingEffect.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
          crossorigin="anonymous"></script>
  </body>
</html>