<!DOCTYPE html>
<html lang="en">
<%- include('../headFoot/head') %>
<title>Attendance-Tracker Teacher's Home Page</title>
<link rel="stylesheet" href="/cssFolder/login.css">
<style>
  .newClass{
    margin-top: 15px;
    display: flex;
    justify-content: space-evenly;
  }
</style>
<body>
  
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand logo" href="/"></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link textSize" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active textSize" aria-current="page">All Classes</a>
              </li>
              <li class="nav-item">
                <a class="nav-link textSize" href="/Attendance-Tracker/userGuide">User Guide</a>
              </li>
              <%if(currUsers && currUsers._id.equals(newTeacher._id)){%>
              <li class="nav-item">
                <a class="nav-link textSize" href="/Attendance-Tracker/<%=newTeacher._id%>/Delete-Account">Delete Account</a>
              </li>
              <li class="nav-item">
                <a class="nav-link textSize" href="/Attendance-Tracker/Teacher-Log-Out">Log Out</a>
              </li>
              <%}%>
            </ul>
          </div>
        </div>
     </nav>

    <!-- Flash Message... -->
    <%- include('../headFoot/flashMsg.ejs') %>
    <!-- Flash Message... -->

    <div class="top">Attendance Tracker</div>

    <div class="card cardLog" style="width: 18rem;">
        <img src="/imageFolder/abc.png" class="card-img-top" alt="...">
        <div class="card-body">
          <h4 class="card-title" style="color: rgb(255, 132, 0);"><%=newTeacher.teacherName%> <%=gender==="Male"?"Sir":"Ma'am"%> !</h4>
          <h5 class="card-title">Manage Your All Attendance Records Here...</h5>
          <p class="card-text"></p>
          <%if(currUsers && currUsers._id.equals(newTeacher._id)){%>
          <%for(classe of allClass){%>
            <a href="/Attendance-Tracker/<%=newTeacher._id%>/<%=classe._id%>/Attendance-Sheet" class="btn btn-primary allBtns"><%=classe.semester%> Attendance Sheet For Section <%=classe.section%> </a>
            <%}%>
            <a class="btn btn-primary allBtns" id="createNewClass">Add New Class</a>
          <%}%>  
        </div>
      </div>

      <!-- Add New New Class Form... -->
      <form method="post" action="/Attendance-Tracker/<%=newTeacher._id%>/New-Class" id="formBox" style=" display: none; margin-top: 30px;" class="needs-validation" novalidate>
        <div class="card formCard">
          <div class="card-body">
            <h2 class="card-title" style="align-items: center; text-align: center;">Add New Class</h2>
            <div class="form-floating mb-3 mt-3">
              <select class="form-select" name="semester" id="floatingSelect" aria-label="Floating label select example" required>
                <option value="" disabled selected>Select Your Semester</option>
                <option>1st Semester</option>
                <option>2nd Semester</option>
                <option>3rd Semester</option>
                <option>4th Semester</option>
                <option>5th Semester</option>
                <option>6th Semester</option>
                <option>7th Semester</option>
                <option>8th Semester</option>
              </select>
              <label for="floatingSelect">Current Semester</label>
            </div>
            <div class="form-floating mb-3">
              <input type="text" name="section" style="text-transform: uppercase;" class="form-control" id="floatingse" placeholder="Enter Section" maxlength="7" required>
              <label for="floatingse">Enter Section</label>
            </div>
            <div style="display: flex; justify-content: space-evenly;">
              <button type="submit" class="btn btn-primary disSubmit">Add Class</button>
              <button type="button" class="btn btn-danger" id="cancleForm">Cancle Class</button>
            </div> 
          </div>
        </div>
      </form>
      <!-- Add New New Class Form... -->

    <%-include('../headFoot/footer.ejs')%>

  <script src="/scriptFolder/teacherHome.js"></script>
  <script src="/scriptFolder/inputData.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>